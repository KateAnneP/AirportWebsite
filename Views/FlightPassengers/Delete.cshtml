@model projekt.Models.FlightPassenger

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3 class="mt-1">Are you sure you want to delete this?</h3>
<div>
    <h4>Passenger of the Flight</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Passenger)
