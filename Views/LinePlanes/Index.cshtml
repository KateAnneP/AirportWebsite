@model IEnumerable<projekt.Models.LinePlane>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn1" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Line)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Line.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plane.Model)
            </td>
            <td>
                    <a class="btn1" asp-action="Edit" asp-route-id="@item.LinePlaneID">Edit</a> |
                    <a class="btn1" asp-action="Details" asp-route-id="@item.LinePlaneID">Details</a> |
                    <a class="btn1" asp-action="Delete" asp-route-id="@item.LinePlaneID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
