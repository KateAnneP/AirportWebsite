@model IEnumerable<projekt.Models.Flight>

@{
    ViewData["Title"] = "Airport";
}

<div class="text-center">
    <div class="row">
        <div>
            <a class="btn1" asp-area="" asp-controller="Home" asp-action="Odloty">Odloty</a>
            <a class="btn1" asp-area="" asp-controller="Home" asp-action="Przyloty">Przyloty</a>
        </div>
    </div>
    <h4>Wszystkie loty:</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Line)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Terminal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plane)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Line.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Terminal.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plane.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination.City)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
