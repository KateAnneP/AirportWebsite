@model projekt.Models.Flight

@{
    ViewData["Title"] = "Flight Details";
}

<h2>Flights</h2>

<div class="mt-1">
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAndTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAndTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Line)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Line.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Terminal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Terminal.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plane)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plane.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination.City)
        </dd>
        <dt class="col-sm-2">
            Pasażerowie
        </dt>
        <dd class="col-sm-10">
            @if (Model.FlightPassengers != null && Model.FlightPassengers.Any())
            {
                <ul>
                    @foreach (var passenger in Model.FlightPassengers)
                    {
                        <li>@passenger.PassengerId</li>
                    }
                </ul>
            }
            else
            {
                <p>No passengers for this flight.</p>
            }
        </dd>
        <dt class="col-sm-2">
            Obsługa
        </dt>
        <dd class="col-sm-10">
            @if (Model.FlightStaffs != null && Model.FlightStaffs.Any())
            {
                <ul>
                    @foreach (var staff in Model.FlightStaffs)
                    {
                        <li>@staff.StaffId</li>
                    }
                </ul>
            }
            else
            {
                <p>No passengers for this flight.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn1" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn1" asp-action="Index">Back to List</a>
</div>
